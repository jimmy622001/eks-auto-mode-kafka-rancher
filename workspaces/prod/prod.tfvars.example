# Production Environment Configuration

# AWS Region
aws_region = "us-west-2"

# Cluster Configuration
cluster_name = "my-eks-cluster"
kubernetes_version = "1.24"

# Node Configuration
instance_type = "m5.large"
min_size = 3
max_size = 6
desired_size = 3

# Network Configuration
vpc_cidr = "10.0.0.0/16"
public_subnets = ["10.10.1.0/24", "10.10.2.0/24", "10.10.3.0/24"]
private_subnets = ["10.10.4.0/24", "10.10.5.0/24", "10.10.6.0/24"]
availability_zones = ["us-west-2a", "us-west-2b", "us-west-2c"]

# Rancher Configuration
rancher_hostname = "rancher-prod.example.com"

# Kafka Configuration
kafka_replicas = 3

# Security Configuration
endpoint_private_access = true

# Organization Settings
organization_name = "my-org-prod"
organization_email = "prod-org@example.com"
log_archive_email = "logs-prod@example.com"
audit_email = "audit-prod@example.com"
